# YouTube API Credentials
YOUTUBE_API_KEY=your_api_key_here
YOUTUBE_CLIENT_ID=your_client_id_here
YOUTUBE_CLIENT_SECRET=your_client_secret_here

# Target Channels (comma separated)
TARGET_CHANNEL_IDS=UCrzO_hsFW8vLLy8xFBADfqQ,UC3NYX0zN6GySr_hzJHU4tog

# Processing Settings
CLIP_DURATION_TARGET=600  # 10 minutes in seconds
MIN_HIGHLIGHT_SCORE=0.7   # Threshold for highlight detection
CHECK_INTERVAL_HOURS=24   # How often to check for new streams

# Video Quality Settings
VIDEO_RESOLUTION=1920x1080
VIDEO_FPS=30
VIDEO_BITRATE=5000k

# Subtitle Settings (Lesson 4)
SUBTITLE_FONT=NotoSansJP-Bold.ttf
SUBTITLE_FONT_SIZE=48
SUBTITLE_COLOR=white
SUBTITLE_OUTLINE_COLOR=black
SUBTITLE_OUTLINE_WIDTH=3
SUBTITLE_BG_OPACITY=0.7

# Editing Settings (Lesson 5)
SILENCE_THRESHOLD=-40dB
SILENCE_MIN_DURATION=0.3  # seconds
JUMP_CUT_ENABLED=true
RHYTHM_CHANGE_INTERVAL=7  # 7-second rule

# Output Settings
OUTPUT_DIR=./output
TEMP_DIR=./temp
LOG_LEVEL=INFO

# Upload Settings
AUTO_UPLOAD=false
UPLOAD_TITLE_TEMPLATE={original_title} - ハイライト
UPLOAD_DESCRIPTION_TEMPLATE=元動画: {original_url}\n\n自動生成された見どころ集です。
UPLOAD_TAGS=切り抜き,ハイライト,まとめ

# Render Settings (for deployment)
PORT=10000
